{
  "registry": {
    "name": "{{ kafka_cluster_identifier }}-{{ package }}",
    "zookeeper_namespace": "schema-registry",
    "listener_protocol": "https",
    "keystore_secret": "__dcos_base64__mykeystore",
    "virtual_network_enabled": false,
    "virtual_network_name": "dcos",
    "instances": 1,
    "cpus": 1,
    "mem": 512,
    "heap": 256,
    "role": "*"
  },
  "kafka": {
    "zookeeper_connect": "{{ zk_endpoints.stdout }}",
    "client_security_protocol": "SASL_SSL",
    "kerberos_enabled": true,
    "client_sasl_mechanism": "GSSAPI",
    "client_sasl_kerberos_service_name": "kafka",
    "kerberos_keytab_secret": "__dcos_base64__{{ kafka_cluster_identifier }}_schema_keytab",
    "kerberos_jaas_secret": "{{ kafka_cluster_identifier }}_jaas",
    "kerberos_krb5_secret": "{{ kafka_cluster_identifier }}_krb5"
  }
}